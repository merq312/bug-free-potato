{
  "name": "instant-messenger",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run start\" \"npm run client\"",
    "start": "node build/server.js",
    "cypress:open": "cypress open",
    "build:client": "cd client && npm run build",
    "build:server": "tsc --outDir build",
    "build": "npm run build:server && npm run build:client",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --noshrinkwrap && npm run build"
  },
  "keywords": [],
  "author": "merq312",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.4.1",
    "express": "^4.17.1",
    "socket.io": "^4.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@types/uuid": "^8.3.1",
    "concurrently": "^6.3.0",
    "cypress": "^9.0.0",
    "prettier": "^2.4.1",
    "prisma": "^3.4.1",
    "typescript": "^4.4.4"
  }
}
